                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="View Movie Details"-->
                <!--android:id="@+id/view_movie_btn"-->
                <!--android:onClick="openActivityViewMovie"-->
        <!--/>-->
    <!--</LinearLayout>-->

</LinearLayout>